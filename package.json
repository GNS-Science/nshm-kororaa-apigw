{
  "name": "nshm-kororaa-api",
  "version": "0.2.0",
  "description": "A stitched graphql API for Kororaa UI.",
  "dependencies": {
    "@graphql-tools/delegate": "^10.2.21",
    "@graphql-tools/load": "^8.1.0",
    "@graphql-tools/schema": "^10.0.23",
    "@graphql-tools/stitch": "^9.4.26",
    "@graphql-tools/stitching-directives": "^3.1.36",
    "@graphql-tools/url-loader": "^8.0.31",
    "@graphql-tools/utils": "^10.8.6",
    "@graphql-tools/wrap": "^10.1.2",
    "@vendia/serverless-express": "^4.10.1",
    "@whatwg-node/fetch": "^0.10.8",
    "cross-fetch": "^4.0.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "graphql": "^15.10.1",
    "graphql-request": "^7.2.0",
    "graphql-yoga": "^4.0.5",
    "pino": "^9.7.0",
    "serverless-http": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@graphql-tools/mock": "^9.0.23",
    "@serverless/eslint-config": "^5.1.0",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^28.14.0",
    "git-list-updated": "^1.2.1",
    "globals": "^16.3.0",
    "jest": "^29.3.1",
    "prettier": "^3.0.2",
    "serverless": "^4.17.1",
    "serverless-domain-manager": "^8.0.0",
    "serverless-offline": "^14.4.0",
    "serverless-plugin-warmup": "^8.2.1"
  },
  "main": "handler.mjs",
  "scripts": {
    "start": "node server.js",
    "test": "jest test",
    "deploy": "serverless deploy --stage ${STAGE} --verbose",
    "sls_doctor": "serverless doctor",
    "lint": "eslint  --ignore-pattern .gitignore .",
    "lint:updated": "pipe-git-updated --ext=js -- eslint --ignore-path .gitignore",
    "prettier-check": "prettier -c --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettier-check:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c",
    "prettify": "prettier --write --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettify:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier --write"
  },
  "author": "",
  "license": "AGPL3",
  "eslintConfig": {
    "extends": [
      "@serverless/eslint-config/node"
    ],
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
